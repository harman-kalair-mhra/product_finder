{
  "name": "product_finder",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "copy-styles": "copyfiles -f \"src/styles/*.css\" public/styles",
    "copy-views": "copyfiles -f \"src/views/*.pug\" out/views",
    "dev": "npm run copy-styles && npm run copy-views && npm run watch & nodemon out/app-server.js",
    "test": "jest",
    "watch": "tsc --watch"
  },
  "author": "harmankalair",
  "license": "ISC",
  "dependencies": {
    "@types/jest": "^26.0.9",
    "body-parser": "^1.19.0",
    "copyfiles": "^2.3.0",
    "express": "^4.17.1",
    "lodash": "^4.17.19",
    "mocha": "^8.1.1",
    "path": "^0.12.7",
    "pug": "^3.0.0",
    "watch": "^1.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "jest": "^26.3.0",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
